<div class="cc-section" style="min-height: 70vh; display: flex; align-items: center;">
  <div class="cc-container" style="max-width: 440px;">
    <div class="cc-heading" style="margin-bottom: 2rem;">
      <h1 class="cc-heading__title">{{ 'customer.register' | t }}</h1>
    </div>

    <div class="cc-card" style="padding: 2rem;">
      {% form 'create_customer' %}
        {{ form.errors | default_errors }}

        <div style="display: flex; flex-direction: column; gap: 1.25rem;">
          <div>
            <label for="first_name" class="cc-label">Nombre</label>
            <input type="text" id="first_name" name="customer[first_name]" class="cc-input" required />
          </div>

          <div>
            <label for="last_name" class="cc-label">Apellidos</label>
            <input type="text" id="last_name" name="customer[last_name]" class="cc-input" required />
          </div>

          <div>
            <label for="email" class="cc-label">Email</label>
            <input type="email" id="email" name="customer[email]" class="cc-input" autocomplete="email" required />
          </div>

          <div>
            <label for="password" class="cc-label">Contraseña</label>
            <input type="password" id="password" name="customer[password]" class="cc-input" autocomplete="new-password" required />
          </div>

          <button type="submit" class="cc-btn cc-btn--primary cc-btn--full">
            {{ 'customer.register' | t }}
          </button>

          <p style="text-align: center; font-size: 0.8125rem; color: var(--cc-text-dim);">
            ¿Ya tienes cuenta? <a href="/account/login" style="color: var(--cc-purple-light); font-weight: 600;">Inicia sesión</a>
          </p>
        </div>
      {% endform %}
    </div>
  </div>
</div>
