<div class="cc-section">
  <div class="cc-container" style="max-width: 960px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 3rem;">
      <div>
        <h1 style="font-size: 2rem; font-weight: 900;">{{ 'customer.account' | t }}</h1>
        <p style="color: var(--cc-text-dim); font-size: 0.875rem;">{{ customer.email }}</p>
      </div>
      <a href="/account/logout" class="cc-btn cc-btn--ghost cc-btn--sm">{{ 'customer.log_out' | t }}</a>
    </div>

    <h2 style="font-size: 1.25rem; font-weight: 700; margin-bottom: 1.5rem;">{{ 'customer.orders' | t }}</h2>

    {% if customer.orders.size > 0 %}
      <table class="cc-cart-table">
        <thead>
          <tr>
            <th>Pedido</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          {% for order in customer.orders %}
            <tr>
              <td>
                <a href="{{ order.customer_url }}" style="color: var(--cc-purple-light); font-weight: 600;">
                  {{ order.name }}
                </a>
              </td>
              <td style="color: var(--cc-text-dim);">{{ order.created_at | date: "%d/%m/%Y" }}</td>
              <td>
                <span class="cc-badge cc-badge--green">{{ order.financial_status_label }}</span>
              </td>
              <td style="font-weight: 700;">{{ order.total_price | money }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <p style="color: var(--cc-text-dim); padding: 2rem 0;">No tienes pedidos todav√≠a.</p>
    {% endif %}
  </div>
</div>
