<header class="cc-header">
  <div class="cc-header__inner">
    <a href="/" class="cc-header__logo">
      {% if settings.logo %}
        <img src="{{ settings.logo | image_url: width: 72 }}" alt="{{ shop.name }}" />
      {% else %}
        <img src="{{ 'logo-app.png' | asset_url }}" alt="{{ shop.name }}" />
      {% endif %}
      <span class="cc-header__logo-text">{{ shop.name }}</span>
    </a>

    <nav class="cc-header__nav" role="navigation">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}"
          class="cc-header__link {% if link.active %}cc-header__link--active{% endif %}"
          {% if link.current %}aria-current="page"{% endif %}>
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>

    <div class="cc-header__actions">
      {% if shop.customer_accounts_enabled %}
        {% if customer %}
          <a href="/account" class="cc-header__link">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
          </a>
        {% else %}
          <a href="/account/login" class="cc-header__link">Acceder</a>
        {% endif %}
      {% endif %}

      <a href="/cart" class="cc-header__cart">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
        {% if cart.item_count > 0 %}
          <span class="cc-header__cart-count">{{ cart.item_count }}</span>
        {% endif %}
      </a>

      <button class="cc-header__menu-toggle" aria-expanded="false" aria-label="Menú">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 12h18M3 6h18M3 18h18"/></svg>
      </button>
    </div>
  </div>
</header>

<nav class="cc-mobile-nav" role="navigation">
  {% for link in linklists.main-menu.links %}
    <a href="{{ link.url }}" class="cc-mobile-nav__link">{{ link.title }}</a>
  {% endfor %}
  {% if shop.customer_accounts_enabled %}
    {% if customer %}
      <a href="/account" class="cc-mobile-nav__link">Mi Cuenta</a>
      <a href="/account/logout" class="cc-mobile-nav__link">Cerrar Sesión</a>
    {% else %}
      <a href="/account/login" class="cc-mobile-nav__link">Iniciar Sesión</a>
    {% endif %}
  {% endif %}
</nav>
