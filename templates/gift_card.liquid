<div class="cc-section" style="min-height: 70vh; display: flex; align-items: center;">
  <div class="cc-container" style="max-width: 540px; text-align: center;">
    <div class="cc-card" style="padding: 3rem;">
      <div style="margin-bottom: 2rem;">
        <img src="{{ 'logo-app.png' | asset_url }}" alt="{{ shop.name }}" style="width: 4rem; height: 4rem; border-radius: 1rem; margin: 0 auto 1rem;" />
        <h1 style="font-size: 1.5rem; font-weight: 900;">Tarjeta Regalo</h1>
        <p style="color: var(--cc-text-dim); font-size: 0.875rem;">{{ shop.name }}</p>
      </div>

      <div style="font-size: 3rem; font-weight: 900; margin: 2rem 0;" class="cc-gradient-text">
        {{ gift_card.initial_value | money }}
      </div>

      <div class="cc-card" style="padding: 1.5rem; margin-bottom: 2rem;">
        <p class="cc-label">CÃ³digo de la tarjeta</p>
        <p style="font-size: 1.25rem; font-weight: 700; font-family: var(--cc-font-mono); letter-spacing: 0.1em;">
          {{ gift_card.code | format_code }}
        </p>
      </div>

      {% if gift_card.balance != gift_card.initial_value %}
        <p style="color: var(--cc-text-dim); font-size: 0.875rem;">
          Saldo restante: {{ gift_card.balance | money }}
        </p>
      {% endif %}

      {% if gift_card.expired %}
        <p class="cc-badge cc-badge--amber" style="margin-top: 1rem;">Expirada</p>
      {% endif %}
    </div>
  </div>
</div>
