<div class="cc-section">
  <div class="cc-container" style="max-width: 960px;">
    <div class="cc-heading">
      <p class="cc-heading__eyebrow">Blog</p>
      <h1 class="cc-heading__title">{{ blog.title }}</h1>
    </div>

    <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 2rem;">
      {% for article in blog.articles %}
        <a href="{{ article.url }}" class="cc-card cc-animate-on-scroll">
          {% if article.image %}
            <div class="cc-card__image" style="aspect-ratio: 16/9;">
              <img src="{{ article.image | image_url: width: 800 }}" alt="{{ article.title | escape }}" loading="lazy" />
              <div class="cc-card__image-overlay"></div>
            </div>
          {% endif %}
          <div class="cc-card__body">
            <p style="font-size: 0.625rem; color: var(--cc-purple-light); font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; margin-bottom: 0.5rem;">
              {{ article.published_at | date: "%d %b %Y" }}
            </p>
            <h3 class="cc-card__title">{{ article.title }}</h3>
            <p class="cc-card__description">{{ article.excerpt_or_content | strip_html | truncate: 120 }}</p>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</div>
