<div class="cc-section">
  <div class="cc-container">
    <div class="cc-heading">
      <p class="cc-heading__eyebrow">Colecci√≥n</p>
      <h1 class="cc-heading__title">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <p class="cc-heading__subtitle">{{ collection.description }}</p>
      {% endif %}
    </div>

    {% if collection.products.size > 0 %}
      <div class="cc-product-grid">
        {% for product in collection.products %}
          {% render 'product-card', product: product %}
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <nav style="text-align: center; margin-top: 3rem;">
          {% if paginate.previous %}
            <a href="{{ paginate.previous.url }}" class="cc-btn cc-btn--ghost cc-btn--sm">&larr; Anterior</a>
          {% endif %}
          {% if paginate.next %}
            <a href="{{ paginate.next.url }}" class="cc-btn cc-btn--ghost cc-btn--sm">Siguiente &rarr;</a>
          {% endif %}
        </nav>
      {% endif %}
    {% else %}
      <div style="text-align: center; padding: 4rem 0;">
        <p style="color: var(--cc-text-dim); font-size: 1.125rem;">{{ 'collections.empty' | t }}</p>
        <a href="/collections" class="cc-btn cc-btn--secondary" style="margin-top: 1.5rem;">Ver todas las colecciones</a>
      </div>
    {% endif %}
  </div>
</div>
