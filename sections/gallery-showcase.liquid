<section class="cc-section">
  <div class="cc-container">
    <div class="cc-heading">
      <p class="cc-heading__eyebrow">{{ section.settings.eyebrow | default: 'Galería Dinámica' }}</p>
      <h2 class="cc-heading__title">{{ section.settings.title | default: 'Creado con Comic Crafter' }}</h2>
    </div>

    <div class="cc-gallery-scroll">
      <div class="cc-gallery-scroll__track">
        {% for block in section.blocks %}
          <div class="cc-gallery-scroll__item">
            <div class="cc-gallery-scroll__item-inner">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | image_url: width: 600 }}" alt="{{ block.settings.alt | escape }}" loading="lazy" />
              {% else %}
                <div style="width:100%;height:100%;background:rgba(255,255,255,0.05);"></div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
        {% comment %} Duplicate for infinite scroll {% endcomment %}
        {% for block in section.blocks %}
          <div class="cc-gallery-scroll__item">
            <div class="cc-gallery-scroll__item-inner">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | image_url: width: 600 }}" alt="{{ block.settings.alt | escape }}" loading="lazy" />
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="cc-gallery-scroll__fade-left"></div>
      <div class="cc-gallery-scroll__fade-right"></div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Galería Showcase",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Subtítulo",
      "default": "Galería Dinámica"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Creado con Comic Crafter"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Imagen",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Texto alternativo"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Galería Showcase",
      "blocks": []
    }
  ]
}
{% endschema %}
