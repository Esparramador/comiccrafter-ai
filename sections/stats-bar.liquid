<section class="cc-section cc-radial-glow" style="background-color: var(--cc-bg-surface);">
  <div class="cc-container">
    <div class="cc-stats">
      {% for block in section.blocks %}
        <div class="cc-animate-on-scroll" {{ block.shopify_attributes }}>
          <div class="cc-stat__icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 3l1.912 5.813a2 2 0 0 0 1.275 1.275L21 12l-5.813 1.912a2 2 0 0 0-1.275 1.275L12 21l-1.912-5.813a2 2 0 0 0-1.275-1.275L3 12l5.813-1.912a2 2 0 0 0 1.275-1.275L12 3z"/></svg>
          </div>
          <p class="cc-stat__value">{{ block.settings.value }}</p>
          <p class="cc-stat__label">{{ block.settings.label }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Barra de Estadísticas",
  "blocks": [
    {
      "type": "stat",
      "name": "Estadística",
      "settings": [
        {
          "type": "text",
          "id": "value",
          "label": "Valor",
          "default": "100+"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Etiqueta",
          "default": "Voces IA Disponibles"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Barra de Estadísticas",
      "blocks": [
        { "type": "stat", "settings": { "value": "100+", "label": "Voces IA Disponibles" } },
        { "type": "stat", "settings": { "value": "29", "label": "Idiomas Soportados" } },
        { "type": "stat", "settings": { "value": "8+", "label": "Estilos de Arte" } },
        { "type": "stat", "settings": { "value": "6", "label": "Herramientas IA" } }
      ]
    }
  ]
}
{% endschema %}
